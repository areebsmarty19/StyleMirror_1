            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="bottom"
            android:background="@drawable/edittext_background"
            android:padding="4sp"
            app:fabCradleMargin="8sp"
            app:fabCradleRoundedCornerRadius="50sp"
            app:fabCradleVerticalOffset="6sp"
            android:backgroundTint="@color/purple_Dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:id="@+id/explorerBtn">

                    <ImageView
                        android:id="@+id/imageView61"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_view_list_24"
                        app:tint="@color/white" />

<!--                    <TextView-->
<!--                        android:id="@+id/textView101"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="4sp"-->
<!--                        android:text="Explorer"-->
<!--                        android:textAlignment="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:id="@+id/wishlistBtn">

                    <ImageView
                        android:id="@+id/imageView62"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_bookmark_border_24"
                        app:tint="@color/white" />

<!--                    <TextView-->
<!--                        android:id="@+id/textView102"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="4sp"-->
<!--                        android:text="Wishlist"-->
<!--                        android:textAlignment="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/imageView63"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:src="@drawable/btn_1"
                        app:tint="@color/white" />

<!--                    <TextView-->
<!--                        android:id="@+id/textView103"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="4sp"-->
<!--                        android:text="Explorer"-->
<!--                        android:textAlignment="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cartBtn"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView64"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_shopping_cart_24"
                        app:tint="@color/white" />

<!--                    <TextView-->
<!--                        android:id="@+id/textView104"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="4sp"-->
<!--                        android:text="Cart"-->
<!--                        android:textAlignment="center" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:id="@+id/profileBtn">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:src="@drawable/baseline_person_outline_24"
                        app:tint="@color/white" />

<!--                    <TextView-->
<!--                        android:id="@+id/textView10"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="4sp"-->
<!--                        android:text="Profile"-->
<!--                        android:textAlignment="center" />-->
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchBtn"
            android:src="@drawable/search_icon"
            app:backgroundTint="@color/purple_Dark"
            app:layout_anchor="@id/appBar"
            app:maxImageSize="30sp"
            app:tint="@color/white"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

